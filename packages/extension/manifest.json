{
  "manifest_version": 3,
  "name": "Browser MCP",
  "version": "1.0.0",
  "description": "Connect Chrome to Claude Code via MCP",
  "minimum_chrome_version": "116",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "userScripts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Browser MCP"
  }
}
